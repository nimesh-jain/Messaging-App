<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="19dp"
    android:layout_marginRight="19dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/msg_sender_img"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/mssg_item_txt"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/defaultprof" />

    <TextView
        android:id="@+id/mssg_item_txt"
        android:textIsSelectable="true"
        android:autoLink="all"
        android:linksClickable="true"
        android:maxWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/msg_sender_img"
        android:layout_toLeftOf="@+id/msg_sender_right_img"
        android:layout_toRightOf="@+id/msg_sender_img"
        android:background="@drawable/message_text_background"
        android:padding="10dp"
        android:text="Msg"
        android:textColor="#fff" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="invisible"
        android:id="@+id/msg_sender_right_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mssg_item_txt"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/defaultprof" />

    <TextView
        android:autoLink="all"
        android:linksClickable="true"
        android:textIsSelectable="true"
        android:id="@+id/mssg_item_right_txt"
        android:visibility="visible"
        android:maxWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/msg_sender_right_img"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/msg_sender_img"
        android:layout_toLeftOf="@+id/msg_sender_right_img"
        android:layout_toStartOf="@+id/msg_sender_right_img"
        android:background="@drawable/new_message_text_background"
        android:text="Msg"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/imageView_right"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/mssg_item_txt"
        android:layout_alignStart="@+id/mssg_item_txt"
        android:layout_alignTop="@+id/mssg_item_txt"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/defaultprof" />

    <ImageView
        android:id="@+id/imageView_left"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/mssg_item_txt"
        android:layout_alignStart="@+id/mssg_item_txt"
        android:layout_alignTop="@+id/mssg_item_txt"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:srcCompat="@drawable/defaultprof" />


</RelativeLayout>